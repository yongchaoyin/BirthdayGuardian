/* pages/profile/profile.wxss */
.container {
  padding: 40rpx;
  min-height: 100vh;
}

.profile-header {
  margin-bottom: 40rpx;
}

.avatar-section {
  display: flex;
  align-items: center;
  background: #fff;
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-right: 32rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar-text {
  font-size: 48rpx;
  font-weight: bold;
  color: #fff;
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.username {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.user-email {
  font-size: 28rpx;
  color: #999;
}

.membership-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
}

.membership-card.free {
  background: linear-gradient(135deg, #a8a8a8 0%, #7a7a7a 100%);
}

.membership-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.membership-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
}

.membership-badge {
  font-size: 24rpx;
  color: #333;
  background: linear-gradient(135deg, #ffd700 0%, #ffed4e 100%);
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-weight: bold;
}

.membership-card.free .membership-badge {
  background: rgba(255, 255, 255, 0.3);
  color: #fff;
}

.membership-body {
  display: flex;
  gap: 40rpx;
  margin-bottom: 24rpx;
}

.membership-item {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.item-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
  margin-bottom: 8rpx;
}

.item-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #fff;
}

.membership-footer {
  padding-top: 24rpx;
  border-top: 1rpx solid rgba(255, 255, 255, 0.2);
}

.upgrade-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
}

.section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 16rpx;
  padding-left: 8rpx;
}

.menu-list {
  background: #fff;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.menu-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 40rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-left {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.menu-icon {
  font-size: 40rpx;
}

.menu-text {
  font-size: 28rpx;
  color: #333;
}

.menu-arrow {
  font-size: 48rpx;
  color: #ccc;
  font-weight: 300;
}

.logout-section {
  margin-top: 80rpx;
}

.btn-logout {
  width: 100%;
  height: 88rpx;
  background: #fff;
  border: 1rpx solid #ff4d4f;
  border-radius: 44rpx;
  color: #ff4d4f;
  font-size: 32rpx;
  font-weight: bold;
}

.btn-logout::after {
  border: none;
}
