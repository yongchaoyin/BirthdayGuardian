/* pages/birthdays/edit.wxss */
.container {
  padding: 40rpx;
  min-height: 100vh;
}

.page-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 40rpx;
}

.form-container {
  background: #fff;
  border-radius: 24rpx;
  padding: 40rpx;
}

.form-item {
  margin-bottom: 40rpx;
}

.form-label {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.label-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.label-required {
  color: #ff4d4f;
  margin-left: 8rpx;
  font-size: 32rpx;
}

.label-vip {
  margin-left: 12rpx;
  font-size: 20rpx;
  color: #ffd700;
  background: linear-gradient(135deg, #ffd700 0%, #ffed4e 100%);
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  color: #333;
}

.form-input {
  width: 100%;
  height: 88rpx;
  background: #f5f5f5;
  border: 1rpx solid #e5e5e5;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.picker-view {
  width: 100%;
  height: 88rpx;
  background: #f5f5f5;
  border: 1rpx solid #e5e5e5;
  border-radius: 12rpx;
  padding: 0 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.picker-text {
  font-size: 28rpx;
  color: #333;
}

.picker-icon {
  font-size: 48rpx;
  color: #999;
  font-weight: 300;
}

.form-textarea {
  width: 100%;
  min-height: 200rpx;
  background: #f5f5f5;
  border: 1rpx solid #e5e5e5;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.textarea-counter {
  display: block;
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

.form-actions {
  margin-top: 60rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.btn-submit {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border: none;
  border-radius: 44rpx;
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
}

.btn-submit::after {
  border: none;
}

.btn-cancel {
  width: 100%;
  height: 88rpx;
  background: #f5f5f5;
  border: none;
  border-radius: 44rpx;
  color: #666;
  font-size: 32rpx;
}

.btn-cancel::after {
  border: none;
}
