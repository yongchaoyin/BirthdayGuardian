SPRING_MAIL_HOST=smtp.163.com
SPRING_MAIL_PORT=465
SPRING_MAIL_USERNAME=your-email@163.com
SPRING_MAIL_PASSWORD=your-authorization-code

# Gmail邮箱配置示例（使用STARTTLS端口587）
# SPRING_MAIL_HOST=smtp.gmail.com
# SPRING_MAIL_PORT=587
# SPRING_MAIL_USERNAME=your-email@gmail.com
# SPRING_MAIL_PASSWORD=your-app-password

# JWT配置
JWT_SECRET=birthdayGuardianSecretKey123456789
JWT_EXPIRATION=86400000

# 定时任务配置（每天上午9点检查）
SCHEDULE_CHECK_TIME=0 0 9 * * ?

# 时区设置
TZ=Asia/Shanghai
