<!--pages/login/login.wxml-->
<view class="container">
  <view class="login-box">
    <!-- Logo 区域 -->
    <view class="logo-section">
      <text class="logo-icon">🎂</text>
      <text class="logo-title">生日守护者</text>
      <text class="logo-subtitle">让每个重要的日子都不被遗忘</text>
    </view>

    <!-- 登录按钮 -->
    <view class="login-section">
      <button class="btn-login" bindtap="handleWxLogin">
        <text class="btn-icon">🔐</text>
        <text class="btn-text">微信一键登录</text>
      </button>

      <view class="login-tips">
        <text class="tips-text">登录即表示同意</text>
        <text class="tips-link">《用户协议》</text>
        <text class="tips-text">和</text>
        <text class="tips-link">《隐私政策》</text>
      </view>
    </view>

    <!-- 功能介绍 -->
    <view class="feature-section">
      <view class="feature-item">
        <text class="feature-icon">📅</text>
        <text class="feature-text">生日提醒</text>
      </view>
      <view class="feature-item">
        <text class="feature-icon">📧</text>
        <text class="feature-text">邮件通知</text>
      </view>
      <view class="feature-item">
        <text class="feature-icon">🎁</text>
        <text class="feature-text">贴心守护</text>
      </view>
    </view>
  </view>
</view>
