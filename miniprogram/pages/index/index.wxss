/* pages/index/index.wxss */
.container {
  padding: 0;
  min-height: 100vh;
  background: linear-gradient(180deg, #f0f4f8 0%, #ffffff 100%);
}

.header-section {
  padding: 40rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 0 0 40rpx 40rpx;
}

.welcome-card {
  display: flex;
  flex-direction: column;
  margin-bottom: 40rpx;
}

.welcome-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 16rpx;
}

.welcome-subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.membership-card {
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10rpx);
  border-radius: 24rpx;
  padding: 32rpx;
  display: flex;
  align-items: center;
  gap: 32rpx;
}

.membership-badge {
  padding: 12rpx 24rpx;
  border-radius: 40rpx;
  font-size: 24rpx;
  font-weight: bold;
}

.membership-badge.vip {
  background: linear-gradient(135deg, #ffd700 0%, #ffed4e 100%);
  color: #333;
}

.membership-badge.free {
  background: rgba(255, 255, 255, 0.3);
  color: #fff;
}

.membership-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.info-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
  margin-bottom: 8rpx;
}

.info-value {
  font-size: 32rpx;
  color: #fff;
  font-weight: bold;
}

.section {
  padding: 40rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.section-more {
  font-size: 28rpx;
  color: #667eea;
}

.birthday-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.birthday-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.birthday-icon {
  font-size: 64rpx;
  margin-right: 24rpx;
}

.birthday-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.birthday-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.birthday-date {
  font-size: 28rpx;
  color: #999;
}

.birthday-countdown {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx 24rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 12rpx;
}

.countdown-days {
  font-size: 40rpx;
  font-weight: bold;
  color: #fff;
}

.countdown-text {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.8);
}

.action-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 24rpx;
}

.action-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 40rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.action-icon {
  font-size: 64rpx;
  margin-bottom: 16rpx;
}

.action-text {
  font-size: 28rpx;
  color: #333;
}

.empty-state {
  padding: 120rpx 40rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  display: block;
  margin-bottom: 32rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  display: block;
  margin-bottom: 40rpx;
}
